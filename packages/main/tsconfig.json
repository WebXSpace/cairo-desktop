{
	"compilerOptions": {
		"target": "es2021",
		"useDefineForClassFields": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*.ts"]
}
